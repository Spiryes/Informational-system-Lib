@model Informational_system_Lib.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<h1>Добавяне на нов клиент</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Първо име</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondName" class="control-label">Бащино име</label>
                <input asp-for="SecondName" class="form-control" />
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThirdName" class="control-label">Фамилия</label>
                <input asp-for="ThirdName" class="form-control" />
                <span asp-validation-for="ThirdName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Addres" class="control-label">Адрес</label>
                <input asp-for="Addres" class="form-control" />
                <span asp-validation-for="Addres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Телефонен номер</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EGN" class="control-label">ЕГН</label>
                <input asp-for="EGN" class="form-control" />
                <span asp-validation-for="EGN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameOfBook" class="control-label">Име на взета книга</label>
                <input asp-for="NameOfBook" class="form-control" />
                <span asp-validation-for="NameOfBook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfRecord" class="control-label">Дата на запис</label>
                <input asp-for="DateOfRecord" class="form-control" />
                <span asp-validation-for="DateOfRecord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfDeregistration" class="control-label">Дата на отписване</label>
                <input asp-for="DateOfDeregistration" class="form-control" />
                <span asp-validation-for="DateOfDeregistration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
